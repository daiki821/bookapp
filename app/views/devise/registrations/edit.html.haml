.form-outline-box
  %p.notice= notice
  %p.alert= alert
  %h2.form-title ユーザー編集
  .form-box
    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
      = render "devise/shared/error_messages", resource: resource
      .field
        = f.file_field :avatar
      .field
        = f.label :username, 'ユーザー名(必須)'
        %br/
        = f.text_field :username, autofocus: true, autocomplete: "username",class: 'text'
      .field
        = f.label :email, 'メールアドレス'
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email", class: 'text'
      - if devise_mapping.confirmable? && resource.pending_reconfirmation?
        %div
          Currently waiting confirmation for: #{resource.unconfirmed_email}
      .field
        = f.label :introduction, '自己紹介'
        %br/
        = f.text_area :introduction, class: 'text-area'
      .actions
        = f.submit "保存", class: 'btn btn-light my-btn'
