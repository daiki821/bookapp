
.form-outline-box
  %p.notice= notice
  %p.alert= alert
  %h2.form-title ユーザー登録
  .form-box
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render "devise/shared/error_messages", resource: resource
      .field
        = f.label :username, 'ユーザー名(必須)'
        %br/
        = f.text_field :username, autofocus: true, autocomplete: "username",class: 'text'
      .field
        = f.label :email, 'メールアドレス(必須)'
        %br/
        = f.email_field :email, autocomplete: "email",class: 'text'
      .field
        = f.label :password, 'パスワード(必須)'
        %br/
        = f.password_field :password, autocomplete: "new-password", type: 'password',value: '',placeholder: "※#{@minimum_password_length}文字以上",class: 'text'
      .field
        = f.label :password_confirmation, 'パスワード(必須)'
        %br/
        = f.password_field :password_confirmation, autocomplete: "new-password",type: 'password',value: '',placeholder: "もう一度入力",class: 'text'
      .actions
        = f.submit "登録",class: 'btn btn-light my-btn'
  = link_to 'ログインはこちら', new_user_session_path, class: 'registration-link'
