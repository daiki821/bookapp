= render partial: 'commons/account', locals: {user: @account}
.tab-box
  .tab
    %ul.tab-ul
      %li#active-tab
        = link_to '投稿', account_path(id: @account.id), data: {'turbolinks' => false}
      %li
        = link_to 'いいね', account_favorite_index_path(account_id: @account.id), data: {'turbolinks' => false}
.recommend-global-box.recommend-show
  .recommend-card
    - @recommends.each do |recommend|
      = render partial: 'commons/recommends', locals: { recommend: recommend }
= javascript_pack_tag 'like'
