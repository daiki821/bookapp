%nav.navbar.navbar-expand-lg.nav-height
  .container
    = link_to 'ブックたす', root_path, class:'navbar-brand header-font app-name', data: {'turbolinks' => false}
    #navbarSupportedContent.collapse.navbar-collapse
      %ul.navbar-nav.ml-auto
        %li.nav-item
          = link_to root_path , class: 'nav-link header-font', data: {'turbolinks' => false} do
            %i.fas.fa-list
            %span
            タスク
        %li.nav-item
          = link_to recommends_path, class: 'nav-link header-font', data: {'turbolinks' => false} do
            %i.far.fa-comment-alt
            %span
            おすすめ
        %li.nav-item.dropdown
          %a#navbarDropdown.nav-link.dropdown-toggle.header-font{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"}
            - if current_user
              %i.fas.fa-user
              %span
              = current_user.username
            -else
              ログインしてください
          .dropdown-menu{"aria-labelledby" => "navbarDropdown"}
            = link_to 'マイページ', user_path, class: 'dropdown-item', data: {'turbolinks' => false}
            .dropdown-divider
            = link_to 'ログアウト', destroy_user_session_path, method: 'delete', class: 'dropdown-item'

