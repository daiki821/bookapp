%nav.navbar.navbar-expand-lg.nav-height
  .container
    = link_to root_path, class:'navbar-brand header-font app-name', data: {'turbolinks' => false} do
      %i.fas.fa-book-reader
      %span
      ブックたす
    - if current_user.present?
      #navbarSupportedContent.collapse.navbar-collapse
        %ul.navbar-nav.ml-auto
          %li.nav-item
            = link_to todo_tasks_path , class: 'nav-link header-font', data: {'turbolinks' => false} do
              %i.fas.fa-list
              %span
              タスク
          %li.nav-item
            = link_to recommends_path, class: 'nav-link header-font', data: {'turbolinks' => false} do
              %i.far.fa-comment-alt
              %span
              おすすめ
          %li.nav-item.dropdown
            %a#navbarDropdown.nav-link.dropdown-toggle.header-font{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"}
              - if current_user
                %i.fas.fa-user
                %span
                = current_user.username
              -else
                ログインしてください
            .dropdown-menu{"aria-labelledby" => "navbarDropdown"}
              = link_to 'マイページ', user_path, class: 'dropdown-item', data: {'turbolinks' => false}
              .dropdown-divider
              = link_to 'ログアウト', destroy_user_session_path, method: 'delete', class: 'dropdown-item'
    - else
      #navbarSupportedContent.collapse.navbar-collapse
      %ul.navbar-nav.ml-auto
        %li.nav-item
          = link_to new_user_registration_path , class: 'nav-link header-font', data: {'turbolinks' => false} do
            %i.fas.fa-user-plus
            %span
            ユーザー登録
        %li.nav-item
          = link_to new_user_session_path , class: 'nav-link header-font', data: {'turbolinks' => false} do
            %i.fas.fa-sign-in-alt
            %span
            ログイン
        %li.nav-item
          = link_to users_guest_sign_in_path, class: 'nav-link guest-btn', data: {method: 'post', 'turbolinks' => false} do
            %i.fas.fa-user-check
            %span
            ゲストログイン

            

