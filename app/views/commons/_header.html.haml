%nav.navbar.navbar-expand-lg.navbar-light.nav-height
  .container
    = link_to 'ブックたす', root_path, class:'text-white navbar-brand', data: {'turbolinks' => false}
    %button.text-white.navbar-toggler{"aria-controls" => "navbarSupportedContent", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-target" => "#navbarSupportedContent", "data-toggle" => "collapse", :type => "button"}
      %span.navbar-toggler-icon
    #navbarSupportedContent.collapse.navbar-collapse
      %ul.navbar-nav.ml-auto
        %li.nav-item
          = link_to root_path , class: 'nav-link text-white', data: {'turbolinks' => false} do
            %i.fas.fa-list
            %span
            タスク
        %li.nav-item
          = link_to recommends_path, class: 'nav-link text-white', data: {'turbolinks' => false} do
            %i.far.fa-comment-alt
            %span
            おすすめ
        %li.nav-item.dropdown
          %a#navbarDropdown.nav-link.dropdown-toggle.text-white{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"}
            - if current_user
              %i.fas.fa-user
              %span
              = current_user.username
            -else
              ログインしてください
          .dropdown-menu{"aria-labelledby" => "navbarDropdown"}
            = link_to 'マイページ', user_path, class: 'dropdown-item', data: {'turbolinks' => false}
            .dropdown-divider
            = link_to 'ログアウト', destroy_user_session_path, method: 'delete', class: 'dropdown-item'

